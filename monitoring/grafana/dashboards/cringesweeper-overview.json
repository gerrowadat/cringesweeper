{
  "dashboard": {
    "id": null,
    "title": "CringeSweeper Overview",
    "tags": ["cringesweeper", "social-media", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "schemaVersion": 38,
    "version": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up{job=~\"cringesweeper.*\"}, instance)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true,
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          }
        },
        {
          "name": "platform",
          "type": "query",
          "query": "label_values(cringesweeper_platform_last_success_timestamp, platform)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true,
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "changes(cringesweeper_build_info[1h]) > 0",
          "titleFormat": "Deployment",
          "textFormat": "Version: {{version}}, Commit: {{commit}}"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Service Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"cringesweeper.*\",instance=~\"$instance\"}",
            "legendFormat": "{{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN"},
              {"type": "value", "value": "1", "text": "UP"}
            ],
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Platform Health",
        "type": "stat",
        "targets": [
          {
            "expr": "cringesweeper_platform_health_score{instance=~\"$instance\",platform=~\"$platform\"}",
            "legendFormat": "{{platform}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "UNHEALTHY"},
              {"type": "value", "value": "1", "text": "HEALTHY"}
            ],
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Total Posts Processed (24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(cringesweeper:total_posts_processed_24h{instance=~\"$instance\"})",
            "legendFormat": "Posts"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "value"},
            "unit": "short"
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Error Rate (5m)",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(cringesweeper:error_rate_5m{instance=~\"$instance\"})",
            "legendFormat": "Error Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.05},
                {"color": "red", "value": 0.1}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Posts Processed Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(cringesweeper_posts_deleted_total{instance=~\"$instance\",platform=~\"$platform\"}[5m]) * 60",
            "legendFormat": "{{platform}} - Deleted/min"
          },
          {
            "expr": "rate(cringesweeper_posts_unliked_total{instance=~\"$instance\",platform=~\"$platform\"}[5m]) * 60",
            "legendFormat": "{{platform}} - Unliked/min"
          },
          {
            "expr": "rate(cringesweeper_posts_unshared_total{instance=~\"$instance\",platform=~\"$platform\"}[5m]) * 60",
            "legendFormat": "{{platform}} - Unshared/min"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short",
            "custom": {"drawStyle": "line", "lineInterpolation": "linear"}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 6,
        "title": "Operation Duration",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(cringesweeper_operation_duration_seconds_bucket{instance=~\"$instance\",platform=~\"$platform\"}[5m]))",
            "legendFormat": "{{platform}} - 50th percentile"
          },
          {
            "expr": "histogram_quantile(0.95, rate(cringesweeper_operation_duration_seconds_bucket{instance=~\"$instance\",platform=~\"$platform\"}[5m]))",
            "legendFormat": "{{platform}} - 95th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 7,
        "title": "Error Rate by Platform",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(cringesweeper_prune_errors_total{instance=~\"$instance\",platform=~\"$platform\"}[5m]) / (rate(cringesweeper_prune_operations_total{instance=~\"$instance\",platform=~\"$platform\"}[5m]) + rate(cringesweeper_prune_errors_total{instance=~\"$instance\",platform=~\"$platform\"}[5m]))",
            "legendFormat": "{{platform}} - Error Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "percentunit",
            "max": 1,
            "min": 0
          }
        },
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 12}
      },
      {
        "id": 8,
        "title": "Memory Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=~\"cringesweeper.*\",instance=~\"$instance\"} / 1024 / 1024",
            "legendFormat": "{{instance}} - Memory (MB)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "MB"
          }
        },
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 12}
      },
      {
        "id": 9,
        "title": "Platform Last Success",
        "type": "table",
        "targets": [
          {
            "expr": "time() - cringesweeper_platform_last_success_timestamp{instance=~\"$instance\",platform=~\"$platform\"}",
            "legendFormat": "",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {"width": 100},
            "mappings": [
              {
                "type": "range",
                "options": {
                  "from": 0,
                  "to": 3600,
                  "result": {"color": "green", "text": "Recent"}
                }
              },
              {
                "type": "range", 
                "options": {
                  "from": 3600,
                  "to": 7200,
                  "result": {"color": "yellow", "text": "Stale"}
                }
              },
              {
                "type": "range",
                "options": {
                  "from": 7200,
                  "to": null,
                  "result": {"color": "red", "text": "Very Stale"}
                }
              }
            ],
            "unit": "s"
          }
        },
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 12}
      }
    ]
  }
}